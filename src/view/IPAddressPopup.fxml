<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane styleClass="container" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600.0" prefHeight="400.0">
    <center>
        <VBox styleClass="container">
            <Label styleClass="h3" text="IP-Adresse eingeben:"/>
            <TextField fx:id="ipAddressInput"/>
        </VBox>
    </center>
    <bottom>
        <BorderPane>
            <left>
                <Button fx:id="joinButton" text="Beitreten"/>
            </left>
            <right>
                <Button fx:id="cancelButton" text="Abbrechen"/>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
